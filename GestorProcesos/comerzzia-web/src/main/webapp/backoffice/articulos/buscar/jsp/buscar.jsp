<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="cmz" uri="/WEB-INF/tlds/cmz.tld" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>

<jsp:useBean id="formularioConsultaArticulos" type="com.comerzzia.web.backoffice.articulos.ui.FormularioConsultaArticulosBean" scope="session" />
<jsp:useBean id="permisos" class="com.comerzzia.servicios.core.permisos.PermisosEfectivosAccionBean" scope="request" />

<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Comerzzia</title>
    
    <link rel="stylesheet" type="text/css" media="screen,projection,print" href="comun/css/comerzzia.css" />
    <link rel="stylesheet" type="text/css" media="screen,projection,print" href="comun/css/calendario.css" />
    
    <script type="text/javascript" language="javascript" src="comun/js/comun.js"></script>
    <script type="text/javascript" language="javascript" src="comun/js/formulario.js"></script>
    <script type="text/javascript" language="javascript" src="comun/js/ayudas.js"></script>
    <script type="text/javascript" language="javascript" src="comun/js/validacion.js"></script>
    
    <script type="text/javascript">
        function inicio() {
        	setFoco("codArt");
        }

        function consultar(){
        	if(checkForm()) {
        		document.getElementById("accion").value = "leerFormulario";
        		document.getElementById("operacion").value = "consultar";
        		document.getElementById("frmDatos").submit();
        		_esperando();
        	}
        }

        function checkForm(){
        	return true;
        }

        function verRegistroFormulario(indice){
			document.getElementById("accion").value = "leerFormulario";
			document.getElementById("operacion").value = "verRegistroFormulario";
			document.getElementById("indice").value = indice;
			document.getElementById("frmDatos").submit();
			_esperando();
		}
    </script>
  </head>

  <body  onload="inicio();">
    <cmz:main>
      <cmz:panelCMZBackoffice>
        <cmz:cabeceraPanelCMZ titulo="${permisos.accionMenu.titulo}" icono="${permisos.accionMenu.icono}">
          <cmz:acciones numAccionesVisibles="1">          
            <cmz:accion titulo="Ver Permisos" icono="comun/images/iconos/permisos.gif" descripcion="Ver permisos efectivos del usuario" onclick="verPermisos(${permisos.accionMenu.idAccion})" />
            <c:if test="${permisos.puedeAdministrar}">
              <cmz:accion titulo="Administrar Permisos" icono="comun/images/iconos/admin_permisos.gif" descripcion="Administración de permisos" onclick="adminPermisos(${permisos.accionMenu.idAccion})" />
            </c:if>
          </cmz:acciones>
        </cmz:cabeceraPanelCMZ>
        
        <cmz:cuerpoPanelCMZ>
          <cmz:mensaje/>
          <form id="frmDatos" name="frmDatos" action="consultaArticulos" method="post">
            <input id="accion" name="accion" type="hidden" value="" />
            <input id="operacion" name="operacion" type="hidden" value="" />
            <input id="indice" name="indice" type="hidden" value="" />
            
            <c:choose>
		     <c:when test="${formularioConsultaArticulos.modoVisualizacionFicha}">
		         <c:import url="consultaArticulosFicha.jsp"></c:import>
		     </c:when>
		     <c:otherwise>
		         <c:import url="consultaArticulosTabla.jsp"></c:import>
		     </c:otherwise>
		    </c:choose>
          </form>
        </cmz:cuerpoPanelCMZ>
      </cmz:panelCMZBackoffice>
    </cmz:main>
  </body>
</html>
